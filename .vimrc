" => Text, tab and indent related
"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" Use spaces instead of tabs
set expandtab

" Be smart when using tabs ;)
set smarttab
set softtabstop=4

" 1 tab == 4 spaces
set shiftwidth=4
set shiftround
set tabstop=4

" Linebreak on 79 characters
set linebreak
set textwidth=79

set autoindent "Auto indent
set smartindent "Smart indent
set wrap "Wrap lines
